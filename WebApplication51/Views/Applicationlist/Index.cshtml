@model IEnumerable<WebApplication51.Models.Applicationlist>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Applicationlist" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-square"></i>
                Create New Application
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="80%">@obj.Name</td>
                       

                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Applicationlist" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="far fa-edit"></i>
                                </a>
                                <a asp-controller="Applicationlist" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Category List Exists</p>
    }
</div>